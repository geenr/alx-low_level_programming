CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
RM = rm -f
NAME = school

#the CFLAGS is an inbuilt so there is no need to write it

.PHONY: all clean oclean fclean re

all: $(OBJ) m.h
	$(CC) $(OBJ) -o $(NAME)
clean:
	$(RM) $(NAME) *~
oclean:
	$(RM) $(OBJ)
fclean: clean oclean
re: oclean all
